<h2>用户列表</h2>

<hr>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>用户</th>
      <th>性别</th>
      <th>星座</th>
      <th>地区</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
          <%= link_to user do %>
            <%= image_tag user.avatar || 'user.png', width: 32, height: 32, class: 'user-avatar' %>
            <%= user.name || user.email %>
          <% end %>
        </td>
        <td><%= user.gender %></td>
        <td><%= user.astro %></td>
        <td><%= user.city %></td>
        <td><%= link_to '删除', user, method: :delete, data: { confirm: '确认删除？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
