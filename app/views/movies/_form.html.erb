<%= bootstrap_form_for @movie, layout: :horizontal do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :alias %>
  <%= f.number_field :year %>
  <%= f.text_field :release_date %>
  <%= f.text_field :poster, placeholder: '输入网址或者直接上传海报' %>
  <%= f.file_field :poster_file, label: '上传海报' %>
  <%= f.text_field :star %>
  <%= f.text_field :director %>
  <%= f.text_field :writer %>
  <%= f.text_field :country %>
  <%= f.number_field :runtime, placeholder: '单位：分钟' %>
  <%= f.text_field :aka %>
  <%= f.text_field :genre, placeholder: '如：动画/冒险/喜剧' %>
  <%= f.text_area :content, rows: 10 %>
  <%= f.form_group do %>
    <%= f.submit %>
  <% end %>
<% end %>
