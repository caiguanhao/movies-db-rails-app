<%= bootstrap_form_for @movie, layout: :horizontal do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :alias %>
  <%= f.number_field :year %>
  <%= f.text_field :poster %>
  <%= f.text_field :star %>
  <%= f.text_field :director %>
  <%= f.text_field :writer %>
  <%= f.text_field :country %>
  <%= f.number_field :runtime %>
  <%= f.text_field :aka %>
  <%= f.text_field :genre %>
  <%= f.text_area :content, rows: 10 %>
  <%= f.form_group do %>
    <%= f.submit %>
  <% end %>
<% end %>
