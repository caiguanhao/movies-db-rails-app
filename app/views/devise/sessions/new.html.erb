<div class="row">
  <div class="col-sm-6 col-sm-offset-3 box">
    <%= bootstrap_form_for resource, as: resource_name, url: session_path(resource_name), layout: :horizontal do |f| %>
      <%= f.email_field :email, autofocus: true %>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if devise_mapping.rememberable? -%>
        <%= f.form_group do %>
          <%= f.check_box :remember_me %>
        <% end %>
      <% end -%>
      <%= f.form_group do %>
        <%= f.submit "登录" %>
        &nbsp;&nbsp;&nbsp;
        <%= link_to "新用户注册", new_user_registration_path %>
      <% end %>
    <% end %>
  </div>
</div>
