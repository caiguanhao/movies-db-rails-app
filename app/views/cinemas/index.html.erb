<p id="notice"><%= notice %></p>

<h1>所有影院</h1>

<table class="table">
  <thead>
    <tr>
      <th>名称</th>
      <th>城市</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cinemas.each do |cinema| %>
      <tr>
        <td><%= link_to cinema.name, cinema %></td>
        <td><%= cinema.city %></td>
        <td><%= link_to '编辑', edit_cinema_path(cinema) %></td>
        <td><%= form_tag cinema, method: :delete do %><%= submit_tag '删除', class: 'btn-link' %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '创建新的影院', new_cinema_path %>
